        <StackPanel>
            <TextBlock Text="진행 상황: "/>
            <TextBlock Name="TB_Main" Text="준비중.." Margin="5,5,5,5"/>
        </StackPanel>
        <ProgressBar Name="PB_Main" IsIndeterminate="True" Grid.Row="1"/>
    </Grid>
</Window>
